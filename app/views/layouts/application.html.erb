<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "EuroHaten", ruut_path, class: "navbar-brand" %>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><%= link_to t("home"), ruut_path %></li>
      <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= t("about_us") %>
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to t("profile"), "#" %></li>
          <li><%= link_to t("production"), "#" %></li>
          <li><%= link_to t("vision_mission"), "#" %></li> 
        </ul>
      </li>
      <li><%= link_to t("references"), "#" %></li> 
      <li><%= link_to t("contact_us"), "#" %></li> 
    </ul>
  </div>
</nav>


<%= yield %>

<nav class="navbar navbar-default navbar-fixed-bottom">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><%= link_to t("new_products"), "#" %></li> 
      <li><%= link_to t("contact_us"), "#" %></li>
      <li><%= link_to t("hotel_sets"), "#" %></li> 
      <li><%= link_to t("certificates"), "#" %></li>
    </ul>
  </div>
</nav>

</body>
</html>
